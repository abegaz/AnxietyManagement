<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#465d76"
        android:minHeight="300dp" android:minWidth="400dp">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="85dp"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Music"
                    android:textSize="42sp"


                    android:typeface="normal"
                    app:fontFamily="sans-serif" android:textColor="#9cc7f8"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

            <TextView
                    android:text='"Second Coming" by Kevin Macleod'
                    android:layout_width="200dp"
                    android:layout_height="match_parent" android:id="@+id/song1" android:layout_weight="1"
                    app:fontFamily="casual" android:textSize="20sp" android:textColor="@color/black_overlay"/>
            <Button
                    android:text="Play"
                    android:layout_width="137sp"
                    android:layout_height="59dp" android:id="@+id/song1_button" android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

            <TextView
                    android:text='"Spellbound" by Kevin Macleod'
                    android:layout_width="200dp"
                    android:layout_height="match_parent" android:id="@+id/song2" android:layout_weight="1"
                    app:fontFamily="casual" android:textSize="20sp" android:textColor="@color/black_overlay"/>
            <Button
                    android:text="Play"
                    android:layout_width="137dp"
                    android:layout_height="59dp" android:id="@+id/song2_button" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" android:layout_weight="1" tools:layout_editor_absoluteY="267dp"
                tools:layout_editor_absoluteX="10dp">

            <TextView
                    android:text='"Furious Freak" by Kevin Macleod'
                    android:layout_width="200dp"
                    android:layout_height="match_parent" android:id="@+id/song3" android:layout_weight="1"
                    app:fontFamily="casual" android:textSize="20sp" android:textColor="@color/black_overlay"/>
            <Button
                    android:text="Play"
                    android:layout_width="137dp"
                    android:layout_height="59dp" android:id="@+id/song3_button" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" android:layout_weight="1" tools:layout_editor_absoluteY="267dp"
                tools:layout_editor_absoluteX="10dp">

            <TextView
                    android:text='"Breezin" by Purple Planet'
                    android:layout_width="200dp"
                    android:layout_height="match_parent" android:id="@+id/song4" android:layout_weight="1"
                    app:fontFamily="casual" android:textSize="20sp" android:textColor="@color/black_overlay"/>
            <Button
                    android:text="Play"
                    android:layout_width="137dp"
                    android:layout_height="59dp" android:id="@+id/song4_button" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>